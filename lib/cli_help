#!/usr/bin/env bash

# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: cli_help()
#
# Description:
#   Show help in cli.
#
# Usage:
#   cli_help
#
# Examples:
#   cli_help
#

function cli_help() {

  # shellcheck disable=SC2034
  local _FUNCTION_ID="cli_help"
  local _STATE=0

  printf "%s" "
  CLI Help:

    show <key>            show key info
    <module> <info|help>  show key info about module

    Options:

      <key> - modules     displays modules information

    Examples:

      show modules
      sample info

    Modules:

      show                display module parameters

"

  return $_STATE

}
