#!/usr/bin/env bash

# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: cli_distributor()
#
# Description:
#   Modules distributor.
#
# Usage:
#   cli_distributor
#
# Examples:
#   cli_distributor
#

function cli_distributor() {

  # shellcheck disable=SC2034
  local _FUNCTION_ID="cli_distributor"
  local _STATE=0

  local _argv=("$@")

  local _cli_state=0

  # shellcheck disable=SC2154
  if [[ "${_argv[0]}" == "help" ]] ; then

    _cli_state=0

    if [[ "${#_argv[1]}" -eq 0 ]] ; then

      cli_help

    else

      init_module "${_argv[@]}"
      init_help

    fi

  elif [[ "${_argv[0]}" == "show" ]] ; then

    _cli_state=0

    if [[ "${#_argv[1]}" -eq 0 ]] ; then

      cli_show

    else

      init_module "${_argv[@]}"
      init_show

    fi

  else

    # shellcheck disable=SC2034
    _cli_state=1

    init_module "${_argv[@]}"

    if [[ "$_fname" =~ ${_argv[*]} ]] ; then

      "$_fname"

      # shellcheck disable=SC2034
      __cli_banner="$_fname"
      # shellcheck disable=SC2034
      __cli_state=0

    fi

  fi

  return $_STATE

}
