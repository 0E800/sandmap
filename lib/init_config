#!/usr/bin/env bash

# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: init_config()
#
# Description:
#   Init configuration file.
#
# Usage:
#   init_config
#
# Examples:
#   init_config
#

function init_config() {

  # shellcheck disable=SC2034
  local _FUNCTION_ID="init_config"
  local _STATE=0

  export _session_variables=(\
  "IP address;'0.0.0.0-255.255.255.255';ipaddr;$ipaddr" \
  "Service port number;'1-65535';port;$port" \
  "Network interface;'interface';iface;$iface" \
  "MAC address;'00:00:00:00:00:00-FF:FF:FF:FF:FF:FF';hwaddr;$hwaddr" \
  "Domain name;'domain';domain;$domain" \
  "Report type;'nmap|xml|grep';report;$report" \
  "Pass through TOR;'true|false';tor;$tor" \
  "Terminal type;'internal|external';terminal;$terminal")

  return $_STATE

}
